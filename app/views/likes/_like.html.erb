<% if user_signed_in? && cocktail.liked_by?(current_user)%>
  <%=link_to "お気に入り済", cocktail_likes_path(cocktail.id),  data: { turbo_method: :delete }, class: "cocktail_likes", remote: true %>
<% else %>
  <%=link_to "お気に入りする", cocktail_likes_path(cocktail.id), data: { turbo_method: :post }, class: "cocktail_likes", remote: true %>
<% end %>