<header class='top-page-header'>
  <div class='header-bar'>
    <%= link_to image_tag("iebar-wide.png", class:"iebar-wide"), "/" %>
    <div class='nav'>
    <ul class='lists-right'>
      <% if user_signed_in? %>
        <%= image_tag current_user.image.variant(resize: '80x80'), class: 'header-user-img' if current_user.image.attached? %>
        <li><%= link_to current_user.nickname, user_path(current_user.id), class: "user-nickname" %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete }, class: "logout" %></li>
      <% else %>
        <li><%= link_to 'LogIn', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
    </div>
  </div>
</header>
