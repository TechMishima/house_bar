<div class="user-edit">
  <div class="box-inner">
    <%= form_with model: @user, url: user_registration_path, id: 'edit_user', class: 'edit_user', local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <h1>ユーザー編集</h1>
    <div class="edit-nickname">
      <%= f.label :nickname, "ニックネーム(必須)" %><br />
      <%= f.text_field :nickname, autofocus: true %>
    </div>

    <div class="edit-email">
      <%= f.label :email, "Eメール(必須)" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="edit-password">
      <%= f.label :current_password , "現在のパスワード(必須)" %> <br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="edit-img">
      <%= f.label :image, "画像" %><br />
      <%= f.file_field :image, autofocus: true %>
    </div>

    <div class="edit-bio">
      <%= f.label :bio, "紹介文" %><br />
      <%= f.text_area :bio, autofocus: true %>
    </div>

    <div class="box-newusr">
      <p><span>------------</span> パスワードを変更したいですか？ <span>------------</span></p>
    </div>

    <div class="edit-password">
      <%= f.label :password, "パスワード" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上,半角英数字混合)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="edit-password">
      <%= f.label :password_confirmation, "パスワード(確認)" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="edit-login">
      <%= f.submit "編集" %>
    </div>
    <% end %>

  </div>
</div>
